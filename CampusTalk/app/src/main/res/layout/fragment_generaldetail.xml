                android:id="@+id/tv_phone"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"/>

        </TableRow>

        <TableRow android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
